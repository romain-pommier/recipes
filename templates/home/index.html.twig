{% extends 'base.html.twig' %}

    {% block title %}
        Bienvenue sur  Recipes
    {% endblock %}



    {% block body %}
        <div class="container">
            <div class="jumbotron mt-3">
                <h1 class="display-3">Bienvenue sur Poms Recipes</h1>
                <p class="lead">Nous mettons en relations les recettes de cuisine afin de faire profiter tous le monde!!</p>
                <hr class="my-4">
                <p>Vous aimez les bon petits plats  ? Vous êtes en manque d'inspiration ?</p>
                <p class="lead">
                    <a class="btn btn-primary btn-lg" href="{{path('recipe_index')}}" role="button">Voir les recettes</a>
                </p>
            </div>
            <h2 class="h1 mt-3 mb-4">Les meuilleurs recettes</h2>
            <div class="row ">
                {% for data in recipes %}
                    {% include 'recipe/_recipe.html.twig' with {'recipe': data.recipe} %}
                {% endfor %}
            </div>

            <h2 class="h1 mt-3 mb-4">Les meuilleurs rédacteurs</h2>
            <div class="row" >
                {% for data in users %}
                    <div class="col">
                        <div class="card border-secondary mb-3">
                            <div class="card-body">
                                <h4 class="" card-title>{{ data.user.fullName }}</h4>
                                <hr>
                                <div class="card-text">
                                    <img src="{{ data.user.picture }}" alt="Avatar de {{ data.user.fullName }}"
                                         class="float-left mr-3">
                                    <p>{{ data.user.introduction }}</p>
                                    <a href="{{ path('user_show', {'slug': data.user.slug}) }}" class="btn btn-success float-right">En savoir plus.</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}



            </div>

        </div>
    {% endblock %}
