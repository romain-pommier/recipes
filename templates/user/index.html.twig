{% extends 'base.html.twig' %}

{% block title %}Page de {{ user.fullName }}{% endblock %}

{% block body %}
   <div class="container">
       <div class="row align-items-center">
           <div class="col-3 text-center">
               <img src="{{ user.picture }}" alt=" Avatar de {{ user.fullName }}" class="avatar mb-3">
               <br>
               <span class="badge badge-primary">{{ user.recipes | length }} recettes</span>
            </div>
           <div class="col-9">
               <h1>{{ user.fullName }}</h1>
               {% if user is same as(app.user) %}
                <div class="mt-3">
                    <a href="{{ path('account_profile') }}" class="btn btn-primary mr-2 mb-2">
                        modifier mes informations
                    </a>
                    <a href="{{ path('account_password') }}" class="btn btn-primary mb-2">
                        Modifier mon mot de passe </a>
                </div>
               {% endif %}
           </div>
       </div>
       {{ user.description | raw }}

       <hr>
       <h2>Les recettes de {{ user.fullName }}</h2>

       {% if user.recipes | length > 0 %}

       <div class="row">
               {% for recipe in user.recipes %}
                    {% include 'recipe/_recipe.html.twig' %}
               {% endfor %}
           </div>

       {% else %}
       <div class="alert alert-warning">
           <p>
               <strong>{{ user.fullName }}</strong> n'a pas encore de recette sur le site
           </p>
       </div>
       {% endif %}



   </div>

{% endblock %}
