        <button type="button"  id="add-ingredient" class="btn btn-primary"><i class="fas fa-plus"></i>Ajouter un ingredient</button>
    </div>
{% endblock %}

{% block _recipe_ingredients_entry_row %}
    {{ form_widget(form) }}

{% endblock %}

{% block _recipe_ingredients_entry_widget %}
    <div class="form-group" id="block_{{ id }}">
        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div class="col">
                        {{ form_widget(form.name) }}
                    </div>
                </div>
                <div class="row mt-2">
                   <div class="col-6">
                       {{ form_widget(form.unit) }}
                   </div>
                    <div class="col-6">
                        {{ form_widget(form.quantity) }}
                    </div>
                </div>
            </div>
            <div class="col-2">
                <button type="button" data-action="delete" data-target="#block_{{ id }}" class="btn btn-danger">X</button>
            </div>
        </div>
        <hr>
    </div>
{% endblock %}



