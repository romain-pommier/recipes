{% extends 'base.html.twig' %}

{% block title %}Les recettes !{% endblock %}
{% block body %}

    <div class="container">
        {{ form_start(form, {'action': path('recipe_search'), 'method': 'POST'}) }}
        <div class="row">
            <div class="col-6">
                {{ form_row(form.searchText) }}
            </div>
            <div class="col-2">
                 {{ form_row(form.submit) }}
            </div>
        </div>




        {{ form_end(form) }}
        <h1 class="my-3">Voici nos recettes</h1>
        <div class="row">
            {% for recipe in recipes %}
                {% include 'recipe/_recipe.html.twig' %}
            {% endfor %}
        </div>
    </div>
{% endblock %}
{% block javascripts %}
